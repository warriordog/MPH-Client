{
  "config_version": 0,
  "actions": {
    "log_startup": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) starting"
      }
    },
    "log_shutdown": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) shutting down"
      }
    },
    "log_switch_coin": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) is switching coins to $(TASK.COIN.ID) ($(TASK.COIN.ALGO)) on $(TASK.MINER.ID).  Estimated earnings: $(TASK.PROFIT) BTC/day."
      }
    },
    "log_switch_algo": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) is switching algorithms to $(TASK.COIN.ALGO)."
      }
    },
    "log_start_mining": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) has started mining."
      }
    },
    "log_stop_mining": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) has stopped mining."
      }
    },
    "run_ping_google": {
      "action_id": "exec_app",
      "args": {
        "id": "ping_test",
        "context": {
          "PING.HOST": "www.google.com"
        }
      }
    },
    "ping_google_sync": {
      "action_id": "exec_any",
      "args": {
        "synchronized": true,
        "command": {
          "executable": "ping",
          "workingDir": "./",
          "args": "www.google.com"
        }
      }
    },
    "log_timer_1": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Timer 1s triggered for $(WORKER.ID)."
      }
    },
    "log_timer_30": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Timer 30.5s triggered for $(WORKER.ID)."
      }
    }
  }
}