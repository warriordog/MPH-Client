{
  "config_version": 0,
  "actions": {
    "log_startup": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) starting"
      }
    },
    "log_shutdown": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) shutting down"
      }
    },
    "log_switch": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) is switching to $(TASK.COIN.ID)($(TASK.COIN.ALGO)) on $(TASK.MINER.ID).  Estimated earnings: $(TASK.PROFIT) BTC/day."
      }
    },
    "log_bad_switch": {
      "action_id": "log",
      "args": {
        "severity": "WARN",
        "message": "Worker $(WORKER.ID) is incorrectly switching from $(TASK.LAST_COIN.ID) to $(TASK.COIN.ID)."
      }
    },
    "log_start_mining": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) has started mining."
      }
    },
    "log_stop_mining": {
      "action_id": "log",
      "args": {
        "severity": "INFO",
        "message": "Worker $(WORKER.ID) has stopped mining."
      }
    },
    "run_ping_google": {
      "action_id": "exec_app",
      "args": {
        "id": "ping_test",
        "context": {
          "PING.HOST": "www.google.com"
        }
      }
    }
  }
}